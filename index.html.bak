            // æ ¹æ“šè§’è‰²é¡¯ç¤ºä¸åŒç•Œé¢
            const title = role === 'host' ? 'ğŸ  æˆ¿æ± - ç™¼å–®' : 
                         role === 'cleaner' ? 'ğŸ‘· æ¸…æ½”å·¥ - æ¥å–®' : 'ğŸ“Š èª¿åº¦å¹³å°';
            document.getElementById('roleTitle').textContent = title;
            
