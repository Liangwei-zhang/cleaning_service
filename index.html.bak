            `).join('');
        }
        
        function getStatusText(status) {
            const map = {open:'å¾…æ¥å–®', accepted:'å·²æ¥å–®', completed:'å·²å®Œæˆ', cancelled:'å·²å–æ¶ˆ'};
            return map[status] || status;
        }
        
        function getActionButtons(order) {
            if (currentRole === 'host' && order.host_phone === currentHostId && order.status === 'open') {
                return `<button class="btn btn-small" onclick="editOrder(${order.id})">ç·¨è¼¯</button>
