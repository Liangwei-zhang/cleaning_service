        function login(role) {
            currentRole = role;
            localStorage.setItem('user_role', role);
            
            // å¦‚æœæ˜¯æˆ¿æ±ï¼Œéœ€è¦é©—è­‰
            if (role === 'host') {
                const hostId = localStorage.getItem('host_id');
