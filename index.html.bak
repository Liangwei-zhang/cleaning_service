            }
            if (currentRole === 'cleaner' && order.status === 'open') {
                return `<button class="btn" onclick="acceptOrder(${order.id})">æ¥å–®</button>`;
            }
            if (currentRole === 'cleaner' && order.status === 'accepted' && order.assigned_cleaner_id == currentCleanerId) {
                return `<button class="btn" onclick="completeOrder(${order.id})">å®Œæˆæ¸…æ½”</button>`;
            }
            if (currentRole === 'admin' && order.status !== 'completed') {
                return `<button class="btn" style="background:#f44336" onclick="cancelOrder(${order.id})">å–æ¶ˆ</button>`;
            }
            return '';
        }
        
