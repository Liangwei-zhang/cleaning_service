            document.getElementById('cleanersSection').classList.toggle('hidden', role !== 'admin');
            document.getElementById('hostsSection').classList.toggle('hidden', role !== 'admin');
            document.getElementById('addBtn').style.display = role === 'host' ? 'block' : 'none';
            
