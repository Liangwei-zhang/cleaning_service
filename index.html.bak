                        <span class="badge ${order.status}">${getStatusText(order.status)}</span>
                        ${order.cleaner_name ? `<span style="margin-left:5px;font-size:11px">ğŸ‘· ${order.cleaner_name}</span>` : ''}
                    </div>
                    ${getActionButtons(order)}
