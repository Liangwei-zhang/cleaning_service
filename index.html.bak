        async function loadData() {
            try {
            await Promise.all([loadOrders(), loadStats()]);
            console.log("Data loaded successfully");
        } catch(e) {
            console.error("Load data error:", e);
            alert("åŠ è½½æ•°æ®å¤±è´¥: " + e.message);
        }
            if (currentRole === 'admin') {
                loadCleaners();
                loadProperties();
            }
            if (currentRole === 'host') {
                loadProperties();
            }
        }
        
        async function loadStats() {
            const res = await fetch(`${API_BASE}/orders`);
            const data = await res.json();
            const orders = data.data || [];
            
            document.getElementById('stat-open').textContent = orders.filter(o => o.status === 'open').length;
            document.getElementById('stat-accepted').textContent = orders.filter(o => o.status === 'accepted').length;
            document.getElementById('stat-completed').textContent = orders.filter(o => o.status === 'completed').length;
        }
        
        async function loadOrders() {
            const res = await fetch(`${API_BASE}/orders`);
            const data = await res.json();
            const orders = data.data || [];
            const list = document.getElementById('ordersList');
            
            if (orders.length === 0) {
                list.innerHTML = '<div class="empty">æš«ç„¡è¨‚å–®</div>';
                return;
            }
            
            // æ ¹æ“šè§’è‰²éæ¿¾è¨‚å–®
            let filtered = orders;
            if (currentRole === 'host') {
                // æˆ¿æ±åªçœ‹åˆ°è‡ªå·±ç™¼ä½ˆçš„è¨‚å–®
                filtered = orders.filter(o => o.host_phone === currentHostId);
            } else if (currentRole === 'cleaner' && currentCleanerId) {
                filtered = orders.filter(o => o.assigned_cleaner_id == currentCleanerId || o.status === 'open');
            }
            
            list.innerHTML = filtered.map(order => `
                <div class="card">
                    <div class="card-title">${order.property_name || 'æœªçŸ¥æˆ¿æº'}</div>
                    <div class="card-address">${order.property_address || ''}</div>
